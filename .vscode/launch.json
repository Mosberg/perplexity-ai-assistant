{
  // VS Code launch configuration for Perplexity AI Assistant extension
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}"],
      "outFiles": ["${workspaceFolder}/out/**/*.js"],
      "preLaunchTask": "npm: compile", // Ensure this matches your compile script in package.json
      "sourceMaps": true,
      "smartStep": true,
      "internalConsoleOptions": "openOnSessionStart",
      "env": {
        "NODE_ENV": "development"
      },
      "skipFiles": ["<node_internals>/**", "node_modules/**"],
      "trace": true // Enables detailed extension host tracing for debugging
    }
  ]
}
